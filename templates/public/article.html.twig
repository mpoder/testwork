{% extends 'base.html.twig' %}
{% block styles %}
<style>
  .title-cat-li {
    display: inline;
    margin: auto 8px;
  }
  .news-container {
    margin: 4px;
    border: 2px solid rgb(200,200,200);
    border-radius: 4px;
    max-width: 300px;
  }
  .news-container img {
    width: 100%;
  }

  .news-container-text {
    padding: 4px;
  }
  #content {

  }
  .error-container {
    width: 100%;
    height: 100%;
    padding: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
{% endblock %}
{% block title %}News{% endblock %}

{% block body %}
<div id="title">
  <h1>{{ article.title }}</h1>
  <p>{{ article.description }}</p>
</div>
<div id="content">
  <img src="{{ article.image }}" alt="">
  <p>{{ article.content }}</p>
  <p>Added on {{ article.date|date("d/m/Y") }}<br></p>
  <p>Tags:
  {% for tag in tags %}
  <span> {{ tag }} </span>
  {% endfor %}
  </p>
  <h3>Comments</h3>
  {% for comment in comments %}
  <div class="">
    <h6>Comment from {{ comment.email }}</h6>
    <p>{{ comment.comment }}</p>
  </div>
  {% else %}
  <p>No comments found for this article.</p>
  {% endfor %}
  <h3>Write a comment</h3>
  {{ form_start(form) }}
      {{ form_widget(form) }}
      <button class="btn">{{ button_label|default('Save') }}</button>
  {{ form_end(form) }}

</div>

{% endblock %}
